<Page x:ConnectionId='1'
    x:Class="UWPDiplomaOptions.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPDiplomaOptions"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"                       >

    <StackPanel Background="#0078D7">
        <StackPanel Orientation="Horizontal" Background="#0078D7">
            <Button x:ConnectionId='4' Name="NavButton" Content="Show Navigation"                         FontSize="15" Foreground="White"/>
            <Button x:ConnectionId='5' Name="HomeButton" Content="Home"                          FontSize="15" Foreground="White"/>
            <Button x:ConnectionId='6' Name="LogOffButton" Content="Log Off"                             FontSize="15" Foreground="White"/>
            <Button x:ConnectionId='7' Name="ManageChoiceButton" Content="Manage Choices" FontSize="15" Foreground="White"                                 />
            <Button x:ConnectionId='8' Name="ManageOptionButton" Content="Manage Options" FontSize="15" Foreground="White"                                 />
            <Button x:ConnectionId='9' Name="ManageYearTermButton" Content="Manage YearTerms" FontSize="15" Foreground="White"                                   />
            <Button x:ConnectionId='10' Name="ManageUserRoleButton" Content="Manage User Roles" FontSize="15" Foreground="White"                                   />
            <Button x:ConnectionId='11' Name="ManageUserButton" Content="Manage Users" FontSize="15" Foreground="White"                               />
        </StackPanel>
        <Frame x:ConnectionId='2' Name="MainFrame"/>
        <TextBlock x:ConnectionId='3' Name="Footer" Text="© 2015 - Option Selector" HorizontalAlignment="Center" Foreground="White"/>
    </StackPanel>
</Page>

