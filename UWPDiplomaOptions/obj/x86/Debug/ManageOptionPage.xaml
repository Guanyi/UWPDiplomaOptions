<Page x:ConnectionId='1'
    x:Class="UWPDiplomaOptions.ManageOptionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPDiplomaOptions.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"                     >

    <Grid Background="#0078D7">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>   <!-- header -->
            <RowDefinition Height="Auto"/> <!-- Table header row -->
            <RowDefinition Height="Auto"/> <!-- Table-->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/> <!-- checkbox -->
            <ColumnDefinition Width="2*"/> <!-- OptionId -->
            <ColumnDefinition Width="5*"/> <!-- Title    -->
            <ColumnDefinition Width="2*"/> <!-- IsActive -->
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="1"  Grid.Column="1" Grid.ColumnSpan="4" Orientation="Horizontal">
            <Grid Width="853">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Check to delete" HorizontalAlignment="Center" />
                <TextBlock Grid.Column="1" Text="Id" HorizontalAlignment="Center" />
                <TextBlock Grid.Column="2" Text="Title" HorizontalAlignment="Center" />
                <TextBlock Grid.Column="3" Text="Is Active" HorizontalAlignment="Center" />
            </Grid>
        </StackPanel>

        <ListView x:ConnectionId='2' Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4"                               >
            <ListView.ItemTemplate>
                <DataTemplate                          >
                    <Grid x:ConnectionId='7' Background="Beige" Width="853"  HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox x:ConnectionId='8' Grid.Column="0" HorizontalAlignment="Center"                                 />
                        <TextBlock x:ConnectionId='9' Grid.Column="1"                          FontSize="18.667" HorizontalAlignment="Center"/>
                        <TextBlock x:ConnectionId='10' Grid.Column="2"                       FontSize="18.667" HorizontalAlignment="Center"/>
                        <TextBlock x:ConnectionId='11' Grid.Column="3"                          FontSize="18.667" HorizontalAlignment="Center"/>
                    </Grid >
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel Grid.Row="3"  Grid.Column="1" Grid.ColumnSpan="3" Orientation="Horizontal">
            <Grid Width="853">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Button x:ConnectionId='3' Grid.Column="0" Name="DeleteOption" Content="Delete Option"                           />
                <Button x:ConnectionId='4' Grid.Column="1" Name="AddOption" Content="Add Option"                        />
                <TextBox x:ConnectionId='5' Grid.Column="2" Name="OptionTitle" PlaceholderText="Option Title" />
                <ComboBox x:ConnectionId='6' Grid.Column="3" Name="Active" SelectedIndex="0">
                    <ComboBoxItem Content="Yes" Tag="1" />
                    <ComboBoxItem Content="No" Tag="0" />
                </ComboBox>
            </Grid>
        </StackPanel>
    </Grid>
</Page>

