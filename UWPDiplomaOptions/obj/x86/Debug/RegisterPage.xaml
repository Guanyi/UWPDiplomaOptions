<Page x:ConnectionId='1'
    x:Class="UWPDiplomaOptions.RegisterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPDiplomaOptions"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"                       >

    <Grid Background="#0078D7">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:ConnectionId='2' x:Name="TitleBlock" TextWrapping="Wrap" Text="Register" TextAlignment="Center" Foreground="White" FontSize="64"/>
            <TextBlock x:ConnectionId='3' Margin="0, 0, 0, 50" x:Name="SubTitle" TextWrapping="Wrap" Text="Create a new account" TextAlignment="Center" Foreground="White"/>
            <TextBlock x:ConnectionId='4' x:Name="StudentNumberBlock" TextWrapping="Wrap" Text="Student Number" TextAlignment="Center" Foreground="White"/>
            <TextBox x:ConnectionId='5' x:Name="StudentNumberBox" TextWrapping="Wrap" Text="" TextAlignment="Center" Width="200"/>
            <TextBlock x:ConnectionId='6' x:Name="EmailBlock" TextWrapping="Wrap" Text="Email" TextAlignment="Center" Foreground="White"/>
            <TextBox x:ConnectionId='7' x:Name="EmailBox" TextWrapping="Wrap" Text="" TextAlignment="Center" Width="200"/>
            <TextBlock x:ConnectionId='8' x:Name="PasswordBlock" TextWrapping="Wrap" Text="Password" TextAlignment="Center" Foreground="White"/>
            <PasswordBox x:ConnectionId='9' x:Name="PasswordBox" Width="200"/>
            <TextBlock x:ConnectionId='10' x:Name="ConfirmPasswordBlock" TextWrapping="Wrap" Text="Confirm Password" TextAlignment="Center" Foreground="White"/>
            <PasswordBox x:ConnectionId='11' x:Name="ConfirmPasswordBox" Width="200"/>
            <StackPanel Orientation="Horizontal" Width="200">
                <HyperlinkButton x:ConnectionId='12' Margin="0, 10, 0, 10" x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Center" Width="100" VerticalAlignment="Stretch" Background="White"                           />
                <HyperlinkButton x:ConnectionId='13' Margin="10" x:Name="RegisterButton" Content="Register" HorizontalAlignment="Center" Width="90" VerticalAlignment="Stretch" Background="White"                             />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>


