<Page x:ConnectionId='1'
    x:Class="UWPDiplomaOptions.ManageOptionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPDiplomaOptions.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"                                            >

    <Grid Background="#0078D7" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>   <!-- header -->
            <RowDefinition Height="Auto"/> <!-- Table header row -->
            <RowDefinition Height="Auto"/> <!-- Table-->
            <RowDefinition Height="Auto"/> <!-- Add-->
            <RowDefinition Height="Auto"/> <!-- Delete-->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <!-- checkbox -->
            <ColumnDefinition Width="2*"/>
            <!-- OptionId -->
            <ColumnDefinition Width="5*"/>
            <!-- Title    -->
            <ColumnDefinition Width="2*"/>
            <!-- IsActive -->
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="1" Grid.Column="1" Text="Check to delete" HorizontalAlignment="Center" />
        <TextBlock Grid.Row="1" Grid.Column="2" Text="Id" HorizontalAlignment="Center" />
        <TextBlock Grid.Row="1" Grid.Column="3" Text="Title" HorizontalAlignment="Center" />
        <TextBlock Grid.Row="1" Grid.Column="4" Text="Is Active" HorizontalAlignment="Center" />

        <ListView x:ConnectionId='2' Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4"                               >
            <ListView.ItemTemplate>
                <DataTemplate                          >
                    <Grid x:ConnectionId='14' Background="Beige" Width="853"  HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <CheckBox Grid.Column="0" HorizontalAlignment="Center"/>
                        <TextBlock x:ConnectionId='15' Grid.Column="1"                          FontSize="18.667" HorizontalAlignment="Center"/>
                        <TextBlock x:ConnectionId='16' Grid.Column="2"                       FontSize="18.667" HorizontalAlignment="Center"/>
                        <TextBlock x:ConnectionId='17' Grid.Column="3"                          FontSize="18.667" HorizontalAlignment="Center"/>
                    </Grid >
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button x:ConnectionId='3' Grid.Row="3"  Grid.Column="1" Name="AddOption" Content="Add Option"                         HorizontalAlignment="Center"/>
        <TextBlock x:ConnectionId='4' Grid.Row="3" Grid.Column="2" Name="OptionId" HorizontalAlignment="Center">Auto Generate</TextBlock>
        <TextBox x:ConnectionId='5' Grid.Row="3"  Grid.Column="3" Name="OptionTitle" PlaceholderText="Option Title" />
        <ComboBox x:ConnectionId='6' Grid.Row="3"   Grid.Column="4" Name="Active" SelectedIndex="0" HorizontalAlignment="Center">
           <ComboBoxItem Content="Yes" Tag="1" />
           <ComboBoxItem Content="No" Tag="0" />
        </ComboBox>

        <Button x:ConnectionId='7' Grid.Row="4"  Grid.Column="1" Name="EditOption" Content="Edit Option" HorizontalAlignment="Center"                         />
        <TextBox x:ConnectionId='8' Grid.Row="4" Grid.Column="2" Name="OptionIdWillBeEdited" PlaceholderText="Enter option Id to edit" />
        <TextBox x:ConnectionId='9' Grid.Row="4"  Grid.Column="3" Name="OptionTitleWillBeEdited" PlaceholderText="New option title" />
        <ComboBox x:ConnectionId='10' Grid.Row="4"   Grid.Column="4" Name="OptionActiveWillBeEdited" SelectedIndex="0" HorizontalAlignment="Center">
            <ComboBoxItem Content="Yes" Tag="1" />
            <ComboBoxItem Content="No" Tag="0" />
        </ComboBox>
        <Button x:ConnectionId='11' Grid.Row="5"  Grid.Column="1" Name="DeleteOption" Content="Delete Option"                            HorizontalAlignment="Center"/>
        <TextBox x:ConnectionId='12' Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="1" Name="IdWillBeDeleted" PlaceholderText="Enter option Id to delete" />

        <ProgressRing x:ConnectionId='13' Grid.Row="3" Grid.Column="3" Name="OptionLoadingProessRing" Width="40" Height="40" />
    </Grid>
</Page>

